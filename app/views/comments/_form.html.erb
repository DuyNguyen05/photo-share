<%= form_for([@image, @image.comments.build], html: { id: 'form-add-comment', remote: true }) do |f| %> 

	<div class="row">
		<input type="hidden" name="user_id" value="<%= current_user.id %>">
		<input type="hidden" name="image_id" value="<%= @image.id %>">
        <div class="input-field">
          	<i class="material-icons prefix">mode_edit</i>
        	<%= f.text_area :content, id: 'icon_prefix2', class: 'materialize-textarea', required: true, placeholder: 'Comment here' %>
        </div>

        <div class="input-field">
        	<%= f.submit "Post comment", class: 'btn waves-effect waves-light', style: 'margin-left: 42px;' %>
        </div>
      </div>

<% end %>

<%= render "layouts/spinner" %>