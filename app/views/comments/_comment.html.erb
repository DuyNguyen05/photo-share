
<div class="card hoverable z-depth-2">
		<% if comment.user && comment.created_at && comment.content %>
			<div class="card-content" id="<%= comment.id %>">
				<p><strong><%= comment.user.name %></strong></p>
				<p><small><em><%= time_ago_in_words(comment.created_at) %> ago</em></small></p>
				<p style="margin-top: 7px;"><%= comment.content %></p>
			</div>
		<% end %>
</div>

